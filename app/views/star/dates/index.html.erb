<%= content_for :title, 'Star > Dates' %>

<div class="page-header">
  <h2>
    Star-Schema table: star_dates
    <%= link_to('New date', new_star_date_path, :class => 'btn btn-small pull-right') %>
  </h2>
</div>

<table class="table table-bordered table-striped">
  <tr>
    <th>Day</th>
    <th>Month</th>
    <th>Quarter</th>
    <th>Year</th>
    <th>Action</th>
  </tr>

<% @star_dates.each do |star_date| %>
  <tr>
    <td><%= star_date.day %></td>
    <td><%= star_date.month %></td>
    <td><%= star_date.quarter %></td>
    <td><%= star_date.year %></td>
    <td>
      <%= link_to 'Show', star_date, :class => 'btn' %>
      <%= link_to 'Edit', edit_star_date_path(star_date), :class => 'btn' %>
      <%= link_to 'Destroy', star_date, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %>
    </td>
  </tr>
<% end %>
</table>
